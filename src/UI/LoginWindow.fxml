<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.LoginWindow">
   <children>
      <VBox alignment="CENTER" layoutX="179.0" prefHeight="400.0" prefWidth="242.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="SimpleTeam">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial" size="28.0" />
               </font>
            </Text>
            <TextField fx:id="username" promptText="Username">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin></TextField>
            <PasswordField fx:id="password" promptText="Password">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin></PasswordField>
            <TextField fx:id="server" promptText="Server IP and PORT" text="localhost:7274" />
            <Button fx:id="button" mnemonicParsing="false" onAction="#loginAction" text="Login">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <ProgressBar fx:id="progress" layoutX="200.0" layoutY="368.0" prefWidth="200.0"/>
   </children>
</AnchorPane>
